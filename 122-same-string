public static Boolean sameString(String str1, String str2){
    // solution
    String result1=returnFinalString(str1);
    String result2=returnFinalString(str2);

    return (result1.equals(result2));

}
public static String returnFinalString(String str){
         String backSpace='#';
        Integer hashCode=backSpace.charAt(0);
       System.debug('String:'+str);
        List<Integer> charArray= str.getChars(); //x#yz
        System.debug('char array:'+charArray);
        List<Integer> resultCharArray=new List<Integer>();
        for(Integer i=charArray.size()-1;i>=0;i--){
             System.debug('char at:'+i+'is:'+charArray[i]);
            if(hashCode==charArray[i] ){
                if(hashCode==charArray[i-1])
                {
                i-=3;
                
                System.debug('double backspace at:'+i);
                }
                else{
                    i--;
                     System.debug('single backspace at:'+i);
                }
            }
            else{
                 System.debug('char added:'+charArray[i]);
                resultCharArray.add(charArray[i]);
            }
        }
        String finalStr=String.fromCharArray(resultCharArray).reverse();
        return finalStr;

}
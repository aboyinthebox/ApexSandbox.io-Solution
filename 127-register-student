public String registerStudent(String name, String phone, String email) {
    // code here

    apxio__Student__c student=new apxio__Student__c (
        Name=name,
        apxio__Phone__c =phone,
        apxio__Email__c =email);
    insert student;
    apxio__Student__c newStudent = [SELECT Id, Name, apxio__Phone__c, apxio__Email__c, apxio__Registration_Number__c 
                                    FROM apxio__Student__c
                                    WHERE Id=:student.Id];
    return newStudent.apxio__Registration_Number__c;
}